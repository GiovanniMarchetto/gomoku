<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="mainAnchorPane" xmlns="http://javafx.com/javafx/11.0.2"
            fx:controller="it.units.sdm.gomoku.ui.gui.views.MainView"
            style="-fx-background-color: black;">

    <!--TODO: CHANGE COLORS-->

    <GridPane alignment="CENTER" style="-fx-background-color: green;"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
    >

        <GridPane fx:id="topGridPane" alignment="CENTER"
                  style="-fx-background-color: whitesmoke;"
                  GridPane.columnIndex="0" GridPane.hgrow="NEVER" GridPane.columnSpan="3"
                  GridPane.rowIndex="0" GridPane.vgrow="NEVER"
                  prefHeight="50"
        >
            <Label text="GOMOKU TIME!" style="-fx-font-size: 30"/>
        </GridPane>

        <GridPane fx:id="centerGridPane" alignment="CENTER"
                  style="-fx-background-color: orange;"
                  GridPane.vgrow="ALWAYS" GridPane.hgrow="ALWAYS"
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
                  GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <VBox fx:id="rightGridPane" style="-fx-background-color: pink;"
              GridPane.columnIndex="2" GridPane.hgrow="NEVER"
              GridPane.rowIndex="1" GridPane.vgrow="NEVER"
              prefWidth="100" spacing="10">
            <padding>
                <Insets left="5"/>
            </padding>
            <VBox style="-fx-border-width: 2">
                <Label text="BLACK" style="-fx-text-fill: black; -fx-font-weight: bold"/>
                <Label fx:id="blackPlayerLabel"/>
            </VBox>
            <VBox style="-fx-border-width: 2">
                <Label text="WHITE" style="-fx-text-fill: white; -fx-font-weight: bold"/>
                <Label fx:id="whitePlayerLabel"/>
            </VBox>

            <VBox style="-fx-background-radius: 5; -fx-background-color: #ffa600">
                <Label text="Turn of:"/>
                <Label fx:id="currentPlayerLabel"/>
            </VBox>

            <VBox>
                <padding>
                    <Insets top="10"/>
                </padding>
                <Label fx:id="startTime"/>
            </VBox>
        </VBox>

    </GridPane>

</AnchorPane>
